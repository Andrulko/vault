{% set links = {
    'linkedin-in': 'https://www.linkedin.com/company/reconnect_2',
    'twitter': 'https://twitter.com/ReconnectCloud',
    'facebook': 'https://www.facebook.com/reconnectlecloudsolidaire/',
    'youtube': 'https://www.youtube.com/channel/UCYQOlpeG9KrVvCiKHgUNZcA',
    'medium-m': 'https://medium.com/reconnect',
} %}

<section class="mt-3 py-3 pt-md-5 bg-secondary">
    <div class="container text-center text-white mt-5">
        <h2 class="pt-5 pb-5 text-uppercase"><b>{{ 'thank_you_for_subscription'|trans }}</b></h2>
        <div class="row col-12 col-md-7 mx-auto my-4">
            <p>{{ 'you_are_now_subscribed_for_newsletter'|trans }}</p>
            <p>{{ 'you_can_unsubscribe_for_newsletter'|trans }}</p>
            <p class="pb-4">{{ 'while_waiting_next_newsletter_1'|trans }}<b>{{ 'while_waiting_next_newsletter_2'|trans }}</b></p>
            <div class="d-flex justify-content-between mx-auto mt-5 mb-4">
                {% for icon, href in links %}
                    <a href="{{ href }}" target="_blank">
                        <i class="fab fa-{{ icon }} fa-3x text-white"></i>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
