<!-- CRISP -->
<script type="text/javascript">
    window.$crisp = [];
    window.CRISP_WEBSITE_ID = "1987e7b5-a8f0-4d34-85c6-17c534e6a36e";
    (function () {
        d = document;
        s = d.createElement("script");
        s.src = "https://client.crisp.im/l.js";
        s.async = 1;
        d.getElementsByTagName("head")[0].appendChild(s);
    })();

    {% if app.user %}
    $crisp.push(["set", "user:email", ["{{ app.user.email }}"]]);
    $crisp.push(["set", "user:nickname", ["{{ app.user.username }}"]]);
    {% if app.user.avatar %}
    $crisp.push(["set", "user:avatar", ["{{ asset(app.user.avatar, null, true) }}"]]);
    {% endif %}
    {% endif %}
</script>
