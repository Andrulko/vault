<!-- Aperçu modal -->
<div ng-controller="EntityApercuModalCtrl" class="modal fade bs-apercu-modal" role="dialog"
     tabindex="-1" aria-labelledby="apercuModalLabel"
     style="display: none;">
    <div class="modal-dialog modal-sm" role="document">
        <div ng-if="isDefined()" class="modal-content text-primary">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">×</span></button>
                <h4 class="modal-title text-primary font-size-1-3" id="apercuModalLabel">
                    {{ "{{ entity.nom }}" }}
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 font-size-1" style="white-space:pre-wrap;"
                         ng-bind-html={% verbatim %}noteBody{% endverbatim %}></div>
                </div>
            </div>
        </div>
    </div>
</div>
