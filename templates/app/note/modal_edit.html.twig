<!-- edit modal -->
<div ng-controller="editModalCtrl" id="editModal" class="modal fade bs-edit-modal" role="dialog"
     tabindex="-1" aria-labelledby="editModalLabel"
     style="display: none;">
    <div class="modal-dialog" role="document">
        <div ng-if="isDefined()" class="modal-content text-primary">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-primary font-size-1-3" id="moveIntoFolderModalLabel">
                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                    &nbsp;{{ 'edit'|trans }}</h4>
            </div>
            <div class="modal-body">
                <form id="editModalForm" ng-submit="submitForm()">
                </form>
            </div>
        </div>
    </div>
</div>
