<!-- Information modal -->
<div ng-controller="EntityInformationModalCtrl" class="modal fade bs-information-modal" role="dialog"
     tabindex="-1" aria-labelledby="informationModalLabel"
     style="display: none;">
    <div class="modal-dialog" role="document">
        <div ng-if="isDefined()" class="modal-content text-primary">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">Ã—</span></button>
                <h4 class="modal-title text-primary font-size-1-3" id="informationModalLabel">
                    <i class="fas fa-info-circle" aria-hidden="true"></i>
                    &nbsp;{{ 'donneePersonnelle.information'|trans }}</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 font-size-1">{{ 'name'|trans }}&nbsp;:</div>
                    <div class="col-md-8 font-size-1">{{ "{{ entity.nom }}" }}</div>
                </div>
                <div class="row">
                    <div class="col-md-4 font-size-1">{{ 'firstname'|trans }}&nbsp;:</div>
                    <div class="col-md-8 font-size-1">{{ "{{ entity.prenom }}" }}</div>
                </div>
                <div class="row">
                    <div class="col-md-4 font-size-1">{{ 'add_date'|trans }}&nbsp;:</div>
                    <div class="col-md-8 font-size-1">{{ "{{ entity.created_at | date : 'dd/MM/yyyy HH:mm' }}" }}</div>
                </div>
                <div class="row">
                    <div class="col-md-4 font-size-1">{{'phone'|trans}}&nbsp;:</div>
                    <div class="col-md-8 font-size-1">{{ "{{ entity.telephone }}" }}</div>
                </div>
                <div class="row">
                    <div class="col-md-4 font-size-1">{{ 'email'|trans }}&nbsp;:</div>
                    <div class="col-md-8 font-size-1">{{ "{{ entity.email }}" }}</div>
                </div>
                <div class="row">
                    <div class="col-md-4 font-size-1">{{ 'comment'|trans }}&nbsp;:</div>
                    <div class="col-md-8 font-size-1" style="white-space:pre-wrap;">{{ "{{ entity.commentaire }}" }}</div>
                </div>
                <div class="row">
                    <div class="col-md-4 font-size-1">{{ 'association'|trans }}&nbsp;:</div>
                    <div class="col-md-8 font-size-1">{{ "{{ entity.association }}" }}</div>
                </div>
            </div>
        </div>
    </div>
</div>
