<div ng-controller="EntityRenameModalCtrl" id="renameModal" class="modal fade bs-rename-modal" role="dialog"
     tabindex="-1" aria-labelledby="renameModalLabel"
     style="display: none;">
    <div class="modal-dialog" role="document">
        <div ng-if="isDefined()" class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">Ã—</span></button>
                <h4 class="modal-title text-primary font-size-1-3" id="moveIntoFolderModalLabel">
                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                    &nbsp;{{ 'rename'|trans }}</h4>
                <div class="modal-body pl-0" id="renameModalLabel">
                    <form ng-submit="rename(newName)">
                        <div class="row">
                            <div class="col-md-8">
                                <label class="sr-only" for="nameInput">{{ 'name'|trans }}</label>
                                <div class="input-group">
                                    <div class="input-group-addon {{ app.user.isBeneficiaire ?  "bg-light-green"  : "bg-light-blue"}}"><i class="fas fa-pencil-alt text-primary font-size-1" aria-hidden="true"></i></div>
                                    <input style="border-radius: 0px 4px 4px 0px !important;" ng-model="name" ng-click="event = $event" ng-change="onChange(event)"
                                           class="form-control" required id="nameInput"
                                           ng-model-options="{ getterSetter: true }"
                                           placeholder="{{ "{{entity.nom}}" }}"/>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn {{ app.user.isBeneficiaire ?  "btn-green"  : "btn-blue"}}"><span
                                            class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-body">
                <img ng-if="!entity.is_folder" ng-src="{{ "{{entity.thumb}}" }}" class="img-responsive"
                     alt="{{ "{{entity.nom}}" }}">
            </div>
        </div>
    </div>
</div>
