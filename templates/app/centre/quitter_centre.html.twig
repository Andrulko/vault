{% extends 'app/base.html.twig' %}

{% block metaTitle %}{{ 'centre.metaTitle'|trans }}{% endblock metaTitle %}

{% block appBodyContainer %}
    <h1 class="text-uppercase bold text-primary font-size-1-3">{{ "leave_center_title"|trans({"%s" : centre.nom}) }}</h1>
    <br><br>
    <span class="text-primary font-size-1-3">{{ 'leave_center_confirm'|    trans }}</span>
    <br><br>
    <br>
    <a href="{{ path("re_app_centres", {"id" : beneficiaire.id}) }}"
       class="btn btn-dark-blue barlow-medium font-size-1"><i class="fas fa-times pr-1"></i>{{ 'main.non'|trans }}
    </a> &nbsp;
    <a href="{{ path("re_app_quitterCentre", {"id" : beneficiaire.id, "centreId" : centre.id}) }}?quitter=quitter"
       class="btn btn-green barlow-medium font-size-1"><i class="fas fa-check pr-1"></i>{{ 'main.oui'|trans }}</a>
{% endblock appBodyContainer %}

{% block javascripts %}
    {{ encore_entry_script_tags('base_personal_data') }}
{% endblock javascripts %}
