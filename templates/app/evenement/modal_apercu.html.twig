<div ng-controller="EntityApercuModalCtrl" class="modal fade bs-apercu-modal" role="dialog"
     tabindex="-1" aria-labelledby="apercuModalLabel"
     style="display: none;">
    <div class="modal-dialog modal-sm" role="document">
        <div ng-if="isDefined()" class="modal-content text-primary">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">×</span></button>
                <h4 class="modal-title text-primary font-size-1-3" id="apercuModalLabel">
                    {{ "{{ entity.nom }}" }}
                </h4>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-2"><span class="glyphicon glyphicon-calendar" aria-hidden="true" title="{{ 'date'|trans }}"></span></div>
                    <div class="col-md-10 font-size-1">{{ '{{ entity.date | date:"dd MMMM yyyy à HH:mm" }}' }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2"><span class="glyphicon glyphicon-map-marker" aria-hidden="true" title="{{ 'location'|trans }}"></span></div>
                    <div class="col-md-10 font-size-1">{{ "{{ entity.lieu }}" }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2"><span class="glyphicon glyphicon-comment" aria-hidden="true" title="{{ 'message'|trans }}"></span></div>
                    <div class="col-md-10 font-size-1">{{ "{{ entity.commentaire }}" }}</div>
                </div>
            </div>
        </div>
    </div>
</div>
