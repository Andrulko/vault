{% extends 'user/gestionUser_base.html.twig' %}

{% block metaTitle %}{{ 'user.parametres.metaTitle'|trans }}{% endblock metaTitle %}
{% block addUserTitle %}{{ 'user_parameters_title'|trans|raw }}{% endblock addUserTitle %}
{% block addUserSubtitle %} <span class="text-primary">{{ 'user.parametres.subtitle'|trans({'%subject%' : user.prenom ~ ' ' ~ user.nom}) }}</span>{% endblock addUserSubtitle %}
{% block notifications %}{% endblock %}
{% block addUserContent %}
    <h2 class="font-size-1-3 text-primary">{{ 'beneficiary.delete.account'|trans }}</h2>
    <br/><br/>
    <form method="post">
        <a class="btn btn-dark-blue barlow-medium font-size-1 mr-1" href="{{ app.request.headers.get('referer') }}"> <i class="fas fa-times pr-1"></i> {{ 'main.non'|trans }}</a>
        <button type="submit" value="{{ 'main.oui'|trans }}" class="btn btn-green barlow-medium font-size-1"><i class="fas fa-check pr-1"></i>{{ 'main.oui'|trans }}</button>
    </form>
{% endblock addUserContent %}
