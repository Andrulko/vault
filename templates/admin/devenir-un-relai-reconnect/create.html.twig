                    <div class="col s12 m6">{{ form_row(form.association.nom) }}</div>
                </div>
                <div class="row">
                    <div class="col s12 m6"><br>
                        <button type="submit" class="btn">Cr√©ation</button>
                    </div>
                </div>
                <br><br>
                {{ form_end(form) }}
            </div>
