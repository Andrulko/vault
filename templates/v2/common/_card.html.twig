{% set isDisabled = isDisabled is defined and isDisabled %}
{% set cardColor = isDisabled ? 'grey' : 'primary' %}
{% set buttonText = buttonText is defined ? buttonText : 'submit'|trans %}

<div class="card rounded-card h-100"
        {% if tooltipMessage is defined and tooltipMessage %}
            data-toggle="tooltip"
            data-placement="top"
            title="{{ tooltipMessage }}"
        {% endif %}
>
    <h5 class="card-header bg-{{ cardColor }} text-white p-3 text-center">{{ title }}</h5>
    <div class="card-body flex-column d-flex justify-content-between">
        {% if iconName is defined %}
            <div class="row text-start py-4">
                <div class="col-12 col-md-3 d-flex justify-content-center align-items-center text-center">
                    <i class="fa fa-{{ iconName }} fa-2x text-{{ cardColor }} mt-2" aria-hidden="true"></i>
                </div>
                <div class="col-12 col-md-9 mt-4 mt-md-0">
                    <span class="text-{{ cardColor }}">{{ helpText }}</span>
                </div>
            </div>
        {% endif %}
        {% block customContent %}
        {% endblock %}
        {% if not isDisabled and buttonPath is defined %}
            <div class="row px-5 mt-4">
                <a href="{{ buttonPath }}" data-turbo="false" class="btn btn-outline-primary">
                    {{ buttonText }}
                </a>
            </div>
        {% endif %}
    </div>
</div>
