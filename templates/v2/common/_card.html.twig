<div class="card h-100">
    <h5 class="card-header bg-primary text-white p-3 text-center">{{ title }}</h5>
    <div class="card-body flex-column d-flex justify-content-between">
        <div class="row mt-3 text-start py-4">
            <div class="col-12 col-md-3 d-flex justify-content-center align-items-center text-center">
                <i class="fa fa-{{ iconName }} fa-2x text-primary mt-2" aria-hidden="true"></i>
            </div>
            <div class="col-12 col-md-9 mt-4 mt-md-0">
                <span>{{ helpText }}</span>
            </div>
        </div>
        <div class="row mt-auto px-5">
            <a href="{{ buttonPath }}"
               data-turbo="false"
               class="btn btn-outline-primary "
            >
                {{ buttonText }}
            </a>
        </div>
    </div>
</div>
