<div class="modal fade" tabindex="-1" aria-hidden="true" {{ stimulus_controller('notification') }}>
    <div class="modal-dialog">
        <div class="modal-content text-primary bg-white p-3 rounded">
            <div class="modal-header">
                <h1 class="bold font-size-1-3">{% block title %}{% endblock %}</h1>
                <button type="button" class="btn text-light-grey pe-0 pt-0" data-bs-dismiss="modal"
                        aria-label="Close">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>
            </div>
            <div class="modal-body" style="min-height: 400px;">
                <h2 class="bold font-size-1-3 text-uppercase">{% block subtitle %}{% endblock %}</h2>
                <div class="mb-1 font-size-1-3 row">
                    <div class="col-1">
                        {% block icon %}{% endblock %}
                    </div>
                    <div class="col">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                {% block footer %}{% endblock %}
            </div>
        </div>
    </div>
</div>
