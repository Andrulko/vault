{% extends 'v2/common/_card.html.twig' %}

{% block customContent %}
    <div class="text-start">
        {{ form_start(form, {attr: {class: 'display-required-labels'}}) }}
        <div class="row text-primary">
            {% for field in form %}
{#          The 'plainPassword' field name is only used when creating a professionnal #}
                {% if field.vars.name == 'plainPassword' %}
                    {{ form_errors(field) }}
                    {{ include('v2/user/strong_password/_strong_password_row.html.twig', {'field' : field, 'isBeneficiaire': false, 'hideAndShow': false }) }}
                {% else %}
                    {{ form_row(field) }}
                    {{ form_errors(field) }}
                {% endif %}
            {% endfor %}
        </div>
        {{ include('v2/common/_form_actions.html.twig', { backPath }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
