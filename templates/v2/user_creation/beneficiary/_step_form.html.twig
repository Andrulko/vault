{% set formTemplateVariables = {
    form,
    title: 'create_new_beneficiary'|trans,
    backPath: path('create_beneficiary', {
        step: beneficiaryCreationProcess.previousStep,
        id: beneficiaryCreationProcess.id,
    }),
} %}

{% block content %}
    <div class="col-3 d-none d-md-block">
        {{ include('v2/user_creation/beneficiary/_breadcrumb.html.twig', {beneficiaryCreationProcess}) }}
    </div>
    <div class="col-12 col-md-8 bold">
        {{ form_start(form, {
            attr: {'data-controller': 'conditional-field', class: 'display-required-labels h-100'}
        }) }}
        <div class="h-100 d-flex flex-column justify-content-between">
            <div>
                {% if beneficiaryCreationProcess.isPasswordStep %}
                    {{ include('v2/user_creation/components/_password_card.html.twig', formTemplateVariables) }}
                {% else %}
                    {{ include('v2/common/_card_with_form.html.twig', formTemplateVariables) }}
                {% endif %}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
