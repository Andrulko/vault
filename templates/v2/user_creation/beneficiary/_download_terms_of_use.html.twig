{% extends 'v2/pro_standard_layout.html.twig' %}
{% block title %}
    {{ include('v2/user_creation/beneficiary/_create_beneficiary_title_default.html.twig') }}
{% endblock %}
{% block subTitle %}
    {{ 'steps_count'|trans({'%step%': 6, '%totalSteps%': 6})|upper }}
    <span class="text-blue">
        {{ 'terms_of_use'|trans|upper }}
    </span>
{% endblock %}

{% block content %}
    <p class="mt-4">
        {% if beneficiaryCreationProcess and beneficiaryCreationProcess.isRemotely %}
            {{ 'beneficiary_created_successfully_wait_activation'|trans }}
        {% else %}
            {{ 'print_account_creation_act'|trans }}
            <a href="https://www.reconnect.fr/annexe/bienvenue-compte-reconnect"
               target="_blank"
               class="btn btn-blue text-white ms-2">
                {{ 'download'|trans }}
            </a>
        {% endif %}
    </p>
    <div class="text-center mt-5">
        <a href="{{ path('re_membre_beneficiaires') }}" class="btn btn-primary">
            {{ 'confirm'|trans }}
        </a>
    </div>
{% endblock %}
