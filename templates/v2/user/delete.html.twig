{% extends 'v2/user/settings.html.twig' %}

{% block metaTitle %}{{ 'user.parametres.metaTitle'|trans }}{% endblock metaTitle %}

{% block content %}
    <h2 class="font-size-1-3 text-primary mb-3">{{ 'beneficiary.delete.account'|trans }}</h2>
    {{ form_start(submitForm) }}
        <a class="btn btn-dark-blue font-size-1 mr-1" href="{{ path('user_settings') }}">
            <i class="fas fa-times pr-1"></i>
            {{ 'main.non'|trans }}
        </a>
        <button type="submit" class="btn btn-green font-size-1">
            <i class="fas fa-check pr-1"></i>
            {{ 'main.oui'|trans }}
        </button>
    {{ form_end(submitForm) }}
{% endblock %}
