{% if pendingRelays is not empty %}
    {% set pendingRelay = pendingRelays[0] %}
    <div class="modal fade" tabindex="-1" aria-hidden="true" {{ stimulus_controller('notification') }}>
        <div class="modal-dialog">
            <div class="modal-content text-primary bg-white p-3 rounded">
                <div class="modal-header">
                    <h1 class="bold font-size-1-3">{{ 'user.pendingCentre.title'|trans }}</h1>
                    <button type="button" class="btn text-light-grey pe-0 pt-0" data-bs-dismiss="modal" aria-label="Close">
                        <i class="fa fa-times" aria-hidden="true"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <h2 class="bold font-size-1-3">{{ pendingRelay.nom|upper }}</h2>
                    <hr class="hr-2">
                    <div class="mb-1 font-size-1-3 row">
                        <div class="col-1">
                            <i class="fa fa-home text-primary me-1"></i>
                        </div>
                        <div class="col">
                            {{ include('v2/vault/relay/_address_column.html.twig', {'relay': pendingRelay}) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer text-end">
                    <a href="{{ path('relay_deny', {'id': beneficiary.id, 'relayId': pendingRelay.id}) }}"
                       class="btn btn-primary text-white me-2">
                        {{ 'main.refuser'|trans }}
                    </a>
                    <a href="{{ path('relay_accept', {'id': beneficiary.id, 'relayId': pendingRelay.id}) }}"
                       class="btn btn-green text-white me-2">
                        {{ 'main.accepter'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endif %}
