{% set translationLinks = {
    'fr': {
        'path': path('resetting_mail_translation', {'lang': 'fr'}),
        'imgPath': '@appV2Images/icon_fr.png',
        'alt': 'Logo FR',
    },
    'en': {
        'path': path('resetting_mail_translation', {'lang': 'en'}),
        'imgPath': '@appV2Images/icon_en.png',
        'alt': 'Logo EN',
    },
    'de': {
        'path': path('resetting_mail_translation', {'lang': 'de'}),
        'imgPath': '@appV2Images/icon_de.png',
        'alt': 'Logo DE',
    },
    'es': {
        'path': path('resetting_mail_translation', {'lang': 'es'}),
        'imgPath': '@appV2Images/icon_es.png',
        'alt': 'Logo ES',
    },
} %}
<row>
    <columns>
        <center>
            <menu>
                {% for locale, translationLink in translationLinks %}
                    {% if locale != currentLocale %}
                        <item href="{{ url('resetting_mail_translation', {'lang': locale}) }}" target="_blank">
                            <img src="{{ email.image(translationLink.imgPath) }}"
                                 alt="{{ translationLink.alt }}"
                                 class="w-50 text-center"
                            >
                        </item>
                    {% endif %}
                {% endfor %}
            </menu>
        </center>
    </columns>
</row>
