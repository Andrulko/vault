{% extends 'v2/vault/list_container_layout.html.twig' %}

{% block metaTitle %}{{ 'note.metaTitle'|trans }}{% endblock metaTitle %}

{% block list %}
    <div class="list-container d-flex flex-column justify-content-center">
        {{ notes is not empty
        ? include('v2/vault/note/_list.html.twig', {notes})
        : include('v2/vault/components/_empty_list_content.html.twig', {'message': 'note.emptyData'|trans}) }}
    </div>
{% endblock %}

{% block searchform %}
    {{ include('v2/vault/components/_search_input.html.twig', {
        'routeName': 'note_search',
        'beneficiaryId': beneficiary.id,
    }) }}
{% endblock %}

{% block actionButtons %}
    <a href="{{ path('note_create', {'id': beneficiary.id}) }}" class="btn btn-green text-white">
        <i class="fas fa-plus-circle me-2"></i>{{ 'donneePersonnelle.ajouter'|trans }}
    </a>
{% endblock %}

{% block notifications %}
    {{ render(controller('App\\ControllerV2\\MemberBeneficiaryController::firstMemberVisitNotification', {'id': beneficiary.id})) }}
    {{ render(controller('App\\ControllerV2\\RelayController::relayNotification', {'id': beneficiary.id})) }}
{% endblock %}
