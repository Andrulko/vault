{% set center = relay.centre %}
{% set isAccepted = relay.bValid %}

<div class="text-{{ isAccepted ? 'primary' : 'grey' }} font-size-1-3 mb-5">
    <p class="bold mb-1">{{ center.nom }}</p>
    <p class="mb-1">
        <i class="fa fa-home text-green me-1"></i>
        {{ include('v2/vault/relay/_address.html.twig', {address: center.adresse}) }}
    </p>
    {% if isAccepted %}
        <a href="{{ path('leave_relay', {id: center.id}) }}"
           class="btn btn-primary text-white text-center mt-2 col mx-1">
            <i class="fa fa-times text-white me-1"></i>
            {{ 'leave_center'|trans }}
        </a>
    {% endif %}
</div>
