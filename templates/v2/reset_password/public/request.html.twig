{% extends 'v2/reset_password/public/reset_password_layout.html.twig' %}

{% block form %}
    <h3 class="text-primary">{{ 'public_reset_password'|trans }}</h3>
    <div class="row">
        <div class="py-3 text-primary">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary mt-3">
                {{ 'confirm'|trans }}
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
