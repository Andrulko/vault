<div class="col-md-4 col-lg-3 mb-4"
        {{ stimulus_controller('disaffiliate-user', {
            'url': path('disaffiliate_beneficiary', {'id': beneficiary.id, 'relayId': relay.id}),
            'confirmMessage': 'remove_from_relay_confirm_relay'|trans({
                '%beneficiairy%': beneficiary.user.fullName,
                '%relay%': relay.nom
            }),
            'confirmButtonText': 'delete'|trans,
            'cancelButtonText': 'main.annuler'|trans,
        }) }}
>
    <div class="card shadow h-100">
        <h5 class="card-header p-3 text-center bg-primary text-white">{{ relay.nom }}</h5>
        <div class="card-body flex-column d-flex justify-content-between">
            <div class="row mt-3 text-start pb-4 h-100 d-flex justify-content-center align-items-center ">
                <div class="col-12 col-md-3 text-center">
                    <i class="fa fa-hotel fa-2x text-primary mt-2" aria-hidden="true" {{ stimulus_target('disaffiliate-user', 'icon') }}></i>
                </div>
                <div class="col-12 col-md-9 mt-4 mt-md-0 pt-2 text-center">
                    <span>{{ relay.adresse ?? '' }}</span>
                    <br>
                    <span>{{ relay.region.nom ?? '' }}</span>
                </div>
            </div>
            <button class="btn btn-red text-white" {{ stimulus_action('disaffiliate-user', 'disaffiliate') }}>
                {{ 'remove_from_relay'|trans }}
            </button>
        </div>
    </div>
</div>
