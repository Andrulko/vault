{% extends 'v2/pro_standard_layout.html.twig' %}
{% block title %}
    {{ 'add_new_beneficiary_title_part_1'|trans }}
    <span class="text-blue">
        {{ 'add_new_beneficiary_title_part_2'|trans }}
    </span>
{% endblock %}
{% block subTitle %}{{ 'add_new_beneficiary'|trans|upper }}{% endblock %}

{% block content %}
