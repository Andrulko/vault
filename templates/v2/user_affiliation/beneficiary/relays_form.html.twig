{% extends 'v2/management_layout.html.twig' %}
{% block metaTitle %}{{ 'choose_beneficiary'|trans }}{% endblock %}
{% block subTitle %}{{ 'choose_beneficiary_centers'|trans|upper }}{% endblock %}
{% block subTitleIcon %}{% endblock %}
{% form_theme form 'v2/form_theme/create_user_form_theme.html.twig' %}

{% block content %}
    <div>
        {{ form_start(form) }}
        <h4 class="text-center mt-4">
            <i class="fas fa-user me-1"></i>
            {{ beneficiary.user.username }}
        </h4>
        <div class="row my-4">
            <div class="text-center mx-auto mt-4 col-12 col-md-6">
                <span class="font-size-1-2 mt-3">{{ 'answer_secret_question_relay_acception_1'|trans }} {{ beneficiary.questionSecrete ? 'answer_secret_question_relay_acception_2'|trans : '' }}</span>
                <br>
                <div class=" {{ beneficiary.questionSecrete ? '' : 'd-none' }}" {{ stimulus_controller('toggle_display') }} >
                    <div>
                        <button type="button" class="btn btn-blue text-white rounded-pill shadow-sm mt-3"
                                {{ stimulus_action('toggle_display', 'toggle') }}
                        >
                            {{ 'answer_secret_question'|trans }}
                        </button>
                    </div>
                    <div
                            class="{{ form_errors(form.reponseSecrete)|length > 0 ? '' : 'd-none' }}"
                            {{ stimulus_target('toggle_display', 'target') }}
                    >
                        {{ form_widget(form) }}
                        {{ include('v2/common/_button_with_loader.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-6 mb-4">
                <h4 class="text-center">{{ 'relays'|trans }} :</h4>
                {{ include('v2/user_creation/components/_relays_checkboxes.html.twig', {user: beneficiary.user}) }}
            </div>
            {{ include('v2/common/_button_row.html.twig', {href: path('list_beneficiaries')}) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
